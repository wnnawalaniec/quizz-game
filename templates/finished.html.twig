{% extends "base.html.twig" %}

{% block title %}Index{% endblock %}
{% block head %}
    {{ parent() }}
    <style>
        .bg-green {
            background-color: #198754 !important;
            color: white;
        }

        body {
            display: flex;
            height: 100% !important;
            text-align: center !important;
        }
    </style>
{% endblock %}
{% block header %}
{% endblock %}
{% block content %}

    {% if hasWon %}
        <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column bg-green">
            <div class="mb-auto"></div>
            <main class="px-3">
                <img class="mb-4" src="/static/cup.svg" alt="" width="72" height="72">
                <h1 class="h3 mb-3 fw-normal">Gratulacje! Wygrałaś!</h1>
                <p>Twój wynik to: {{ score }}</p>
            </main>
            <div class="mt-auto"></div>
        </div>
    {% else %}
        <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column text-white bg-dark">
            <div class="mb-auto"></div>
            <main class="px-3">
                <img class="mb-4" src="/static/sad.svg" alt="" width="72" height="72">
                <h1 class="h3 mb-3 fw-normal">Niestety, ale nie udało się.</h1>
                <p>Twój wynik to: {{ score }}</p>
            </main>
            <div class="mt-auto"></div>
        </div>
    {% endif %}
{% endblock %}
